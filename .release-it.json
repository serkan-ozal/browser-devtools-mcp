{
  "git": {
    "commit": true,
    "push": true,
    "tag": true,
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "release": true,
    "releaseNotes": "echo \"Release ${version}\""
  },
  "npm": {
    "publish": true,
    "skipChecks": true
  },
  "hooks": {
    "after:bump": "./scripts/sync-versions.sh"
  }
}
